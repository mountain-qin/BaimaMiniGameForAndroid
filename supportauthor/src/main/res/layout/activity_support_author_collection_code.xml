<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupportAuthorCollectionCodeActivity">

    <TextView
        android:id="@+id/tv_open_scan_scan"
        android:text="@string/click_qr_code_image_open_scan_scan"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_collection_code"
        android:importantForAccessibility="yes"
        android:contentDescription="@string/qr_code_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_open_scan_scan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bt_save_to_album"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
    <Button
        android:id="@+id/bt_save_to_album"
        android:text="@string/save_to_album"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>